#!/usr/bin/env xonsh

if len($ARGS) > 1:
    wallpaper = $ARGS[1]
else:
    wallpaper = $(readlink -f ~/.local/share/backgrounds/background.png)

print(wallpaper)

wal -i @(wallpaper)
cp ~/.cache/wal/colors-waybar.css ~/.config/waybar/
cp ~/.cache/wal/fuzzel.ini ~/.config/fuzzel/

killall -s SIGUSR2 waybar

pywalfox update

hyprctl hyprpaper wallpaper @("," + wallpaper + ",")
